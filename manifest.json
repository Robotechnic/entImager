{
	"manifest_version": 2,

	"author":"Robotechnic",
	"version":"1.0",
	"name":"EntImager",
	"description":"Add on wich allow to send images into ent's mail wihout load they.",

	"icons": {
	  "48": "icons/icon48.png",
	  "96": "icons/icon96.png"
	},

	"page_action": {
		"default_icon": "icons/icon96.png",
		"default_title": "Configurations",
		"default_popup": "views/dialog.html"
	},

	"content_scripts": [
		{
		  "matches": ["*://*.mon-ent-occitanie.fr/*"],
		  "js": ["script/addButton.js"],
		  "css": ["style/button.css"],
		  "run_at": "document_end"
		}
	],

	"background": {
		"scripts": ["script/background.js"],
		"persistent":true	
	},

	"web_accessible_resources":[
		"icons/trash.png", 
		"icons/icon96.png",
		"style/button.css"
	],

	"permissions": ["notifications","tabs","storage"]
}